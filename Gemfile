source 'http://rubygems.org'

gem 'rails', '3.0.9'

gem 'devise'
gem 'omniauth'
gem 'jquery-rails'
gem "less"

# Asset template engines
group :assets do
  gem 'coffee-script'
  gem 'uglifier'
end

group :development do
  gem 'nifty-generators'
  gem 'heroku'
  gem 'sqlite3'
end

group :test do
  gem 'turn', :require => false # Pretty printed test output
  gem 'sqlite3'
end

group :production do
  gem 'pg'
  gem 'thin'
end

