<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form" }) do |f| %>
	<%= devise_error_messages! %>
	
	<div class="clearfix">
		<%= f.label :email %>
		<div class="input">
			<%= f.text_field :email, :class => "xLarge" %>
		</div>
	</div>

	<div class="clearfix">
		<%= f.label :password %>
		<div class="input">
			<%= f.password_field :password, :class => "xLarge" %>
		</div>
	</div>

	<% if devise_mapping.rememberable? -%>
	<div class="clearfix">
		<%= f.label "" %>
		<label>
			<%= f.check_box :remember_me %>
			<span>Remember me</span>
		</label>
	</div>
  	<% end -%>

	<div class="actions">
		<% content_tag :button, "Sign in", :type => :submit, :class => "btn primary" do %>Sign in<% end %>
	</div>
<% end %>
